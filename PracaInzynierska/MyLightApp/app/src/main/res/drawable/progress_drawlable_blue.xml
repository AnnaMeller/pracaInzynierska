<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#8c002aff"
                android:centerColor="#d3001cef"
                android:centerY="0.75"
                android:endColor="#1400f1"
                android:angle="270" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#b40000ff"
                    android:centerColor="#da0400ff"
                    android:centerY="0.75"
                    android:endColor="#0011ff"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#b11100ff"
                    android:centerColor="#d71900ff"
                    android:centerY="0.75"
                    android:endColor="#000dff"
                    android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>